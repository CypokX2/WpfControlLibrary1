<Window x:Class="MainWindow"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lib="clr-namespace:WpfControlLibrary_color_picker_copy;assembly=WpfControlLibrary_color_picker_copy"
       xmlns:vb_lib="clr-namespace:WpfControlLibrary1;assembly=WpfControlLibrary1"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="C# picker" Grid.Row="0" FontSize="20" FontWeight="ExtraBlack"/>
        <lib:ColorPicker Grid.Row="1" Name="colorPicker" Margin="5"></lib:ColorPicker>
        <TextBlock Text="VB picker" Grid.Row="2" FontSize="20" FontWeight="ExtraBlack"/>
        <vb_lib:ColorPicker Grid.Row="3" Name="VBcolorPicker" Margin="5"/>

    </Grid>
</Window>
